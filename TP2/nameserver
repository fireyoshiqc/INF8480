pushd $(dirname $0) > /dev/null
basepath=$(pwd)
popd > /dev/null

# Option a ajustet et ajouter pour lancer un serveur a distance.
#  -Djava.rmi.server.hostname=mycomputer.example.com \

java -cp "$basepath"/nameserver.jar:"$basepath"/shared.jar \
  -Djava.rmi.server.codebase=file:"$basepath"/shared.jar \
  -Djava.rmi.server.hostname=localhost \
  -Djava.security.policy="$basepath"/policy \
  ca.polymtl.inf8480.calculs.nameserver.NameServer $*
  